{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-edit-organisation-type")) %}

<h1>{{ translate("txt-edit-cluster") }}</h1>

{% do form.prepare() %}
{{ form().openTag(form)|raw }}

{% set clusterFieldset = form.get('cluster_entity_cluster') %}

{{ lbs5formelement(clusterFieldset.get('id')) }}
{{ lbs5formelement(clusterFieldset.get('name')) }}
{{ lbs5formelement(clusterFieldset.get('description')) }}

{% if cluster.hasLogo() %}
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">{{ translate("txt-current-logo") }}</label>

        <div class="col-sm-9">
            <p class="form-control-plaintext">{{ clusterLogo(cluster, 300) }}</p>
        </div>
    </div>
{% endif %}

{{ lbs5formelement(form.get('file')) }}
{{ formelement(form.get('csrf')) }}

<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ lbs5formelement(form.get('submit')) }}
        {% if form.has('delete') %}
            {{ lbs5formelement(form.get('delete')) }}
        {% endif %}
        {{ lbs5formelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}

