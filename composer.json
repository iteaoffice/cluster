{
  "name": "iteaoffice/cluster",
  "type": "library",
  "license": "proprietary",
  "description": "Code to manage project cluster",
  "keywords": [
    "project",
    "cluster"
  ],
  "homepage": "https://itea3.org",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.itea4.org"
    }
  ],
  "authors": [
    {
      "name": "Johan van der Heide",
      "email": "johan.van.der.heide@itea3.org"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-dom": "*",
    "ext-json": "*",
    "ext-zip": "*",
    "laminas/laminas-mvc": "^3.1",
    "laminas/laminas-mvc-form": "^1.0.0",
    "laminas/laminas-mvc-console": "^1.2.0",
    "laminas/laminas-mvc-plugins": "^1.0.1",
    "laminas/laminas-navigation": "^2.9.0",
    "jield-webdev/bjy-authorize": "^2.1.0",
    "doctrine/doctrine-orm-module": "3.*"
  },
  "require-dev": {
    "iteaoffice/testing": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Cluster\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ClusterTest\\": "test/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.1-dev",
      "dev-develop": "1.0-dev"
    }
  },
  "scripts": {
    "check": [
      "@php-lint",
      "@phpstan",
      "@cs"
    ],
    "fix": [
      "@cbf",
      "@cs-fix"
    ],
    "php-lint": "./vendor/bin/parallel-lint src",
    "phpstan": "./vendor/bin/phpstan analyse src/ --level=1",
    "cs": "./vendor/bin/phpcs",
    "cbf": "./vendor/bin/phpcbf",
    "cs-fix": "./vendor/bin/php-cs-fixer fix -v src",
    "test": "./vendor/bin/phpunit"
  }
}
